@namespace Authentication.Client.Library.Components

@inherits ListAndDeleteViewComponentBase<User>

<UIIconViewSelector StartlPageType="UIIconPageType.TablePage">
    <UIIconViewPage PageType="UIIconPageType.GridPage">
        <CascadingValue Value="ViewModel">
            <UserGridViewComponent />
        </CascadingValue>
    </UIIconViewPage>
    <UIIconViewPage PageType="UIIconPageType.TablePage">
        <CascadingValue Value="@ViewModel">
            <UserTableViewComponent
                FetchData="FetchDataToViewModel"
                DeleteClick="DeleteAsync"
                EditClick="GoToEditUser" />
        </CascadingValue>
    </UIIconViewPage>
</UIIconViewSelector>