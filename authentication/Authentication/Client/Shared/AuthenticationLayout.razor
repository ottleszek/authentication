@inherits LayoutComponentBase

<MudThemeProvider Theme="@_currentTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"></MudIconButton>
        <MudSpacer />
        <UserHeaderMenu />
        <MudIconButton Icon="@Icons.Filled.ColorLens" OnClick="ChangeThemeAsync" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudGrid>
                <MudItem>
                    <MudLink Typo="Typo.h4" Color="Color.Inherit" Underline="Underline.None" Href="/">MyApp</MudLink>
                </MudItem>
                 <MudItem>
                    <UserDataComponent />
                </MudItem>
            </MudGrid>
        </MudDrawerHeader>
        <MudPaper Width="250px" Class="d-inline-flex">
            <MudNavMenu Margin="Margin.Dense" Rounded="true" Color="Color.Info">                            
                <MudDivider Class="my-2" />
                <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard">Vezérlőpult</MudNavLink>
                <AuthenticationMenuComponent></AuthenticationMenuComponent>
                <MudSpacer />
                <AuthorizeView>
                    <Authorized>
                        <MudLink Color="Color.Inherit" Underline="Underline.None" Class="ml-2" Href="/fetchdata">Fetch data</MudLink>
                    </Authorized>
                </AuthorizeView>
            </MudNavMenu>
        </MudPaper>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

                