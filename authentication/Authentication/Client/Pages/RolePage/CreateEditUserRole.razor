@page "/userrole/form"
@page "/userrole/form/{id:guid}"

@attribute [Authorize(Roles = "admin")]

<UIPage Title="@Title" BreadcrumbItems="_items">
    <MudGrid>
        <MudItem lg="6" md="8" sm="12">
            <UserRoleForm Id="@Id"></UserRoleForm>
        </MudItem>
    </MudGrid>
</UIPage>


@code {
    private string Title => Id == Guid.Empty ? "Új felhasználói szerep megadása" : "Felhasználói szerepek szerkesztése";
    private List<BreadcrumbItem> _items = new();

    [Parameter] public Guid Id { get; set; }

    protected override void OnInitialized()
    {
        _items = new()
        {
            new BreadcrumbItem("Home", href: "#"),
            new BreadcrumbItem("Felhasználói szerepek", href: "/userrole"),
            new BreadcrumbItem(Title, href: null, disabled: true)
        };
        base.OnInitialized();
    }

}
